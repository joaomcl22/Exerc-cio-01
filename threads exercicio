import threading  # Importa o módulo de threading para trabalhar com múltiplas threads
import time       # Importa o módulo time para usar sleep (pausa na execução)

# Função para Thread-1: imprime números de 1 a 10
def imprimir_1_a_10():
    for i in range(1, 11):  # Loop de 1 até 10 (inclusive)
        print(f"[Thread-1] Número: {i}")  # Imprime o número atual com identificação da thread
        time.sleep(0.5)  # Pausa de 0.5 segundos para simular tempo de processamento

# Função para Thread-2: imprime números de 50 a 60
def imprimir_50_a_60():
    for i in range(50, 61):  # Loop de 50 até 60 (inclusive)
        print(f"[Thread-2] Número: {i}")  # Imprime o número atual com identificação da thread
        time.sleep(0.5)  # Pausa de 0.5 segundos para simular tempo de processamento

# Criação dos objetos Thread, cada um apontando para uma das funções acima
thread1 = threading.Thread(target=imprimir_1_a_10)    # Thread para números de 1 a 10
thread2 = threading.Thread(target=imprimir_50_a_60)   # Thread para números de 50 a 60

# Inicia as threads (elas começarão a rodar de forma "paralela")
thread1.start()
thread2.start()

# Aguarda as duas threads terminarem antes de continuar o programa principal
thread1.join()  # Espera thread1 terminar
thread2.join()  # Espera thread2 terminar

# Após ambas as threads terminarem, o programa chega ao fim aqui
(">>> Programa finalizado. Ambas as threads concluíram sua execução.")

